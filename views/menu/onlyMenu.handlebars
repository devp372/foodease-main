<div class="container flex-horizontal flex-center">
    <div class="card mb-3 mt-3" style="max-width: 540px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="{{menu.img}}" width="100" height="100" class="img-fluid rounded-start" alt="Menu Image">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <p class="card-title"><strong>{{menu.name}}</strong></p>
                    <p class="card-text">{{menu.description}}</p>
                    <p class="card-text"><small class="text-muted">Price : {{menu.price}}$</small></p>
                    <a href="/menu/editMenu/{{menu._id}}" class="card-link">Edit</a>
                    <a href="/reviews/menuReview/{{menu._id}}" class="card-link">View
                        Reviews</a>
                </div>
            </div>
        </div>
    </div>
</div>
