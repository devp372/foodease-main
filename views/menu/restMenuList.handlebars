<div class="container">
    {{#if isZeroLength}}
        <div class="alert text-center alert-warning mb-3 mt-3" role="alert">
            Empty Menu
        </div>
    {{else}}
        <div class="row mt-3">
            {{#each menus}}
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="{{this.img}}" width="100" height="100" class="img-fluid rounded-start"
                                 alt="Menu Image">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <p class="card-title"><strong>{{this.name}}</strong></p>
                                <p class="card-text">{{this.description}}</p>
                                <p class="card-text"><small class="text-muted">Price : {{this.price}}$</small></p>
                                <a href="/menu/editMenu/{{this._id}}" class="card-link">Edit</a>
                                <a href="/reviews/menuReview/{{this._id}}" class="card-link">View
                                    Reviews</a>
                                <a href="/menu/viewMenu/{{this._id}}" class="card-link">View</a>
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    {{/if}}
</div>
