<div class="container">
    <h1 class="text-center">Change Password</h1>
    <form action="/changePassword/" method="post">
        <div class="mb-3">
            <label for="prevPassword" class="form-label">Previous Password</label>
            <input type="password" id="prevPassword" name="prevPassword" value="" placeholder="Previous Password"
                   required
                   class="form-control">
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" id="password" name="password" value="" placeholder="Password" required
                       class="form-control">
            </div>
            {{#if error}}
                <div class="alert alert-danger mb-3" role="alert">
                    {{error}}
                </div>
            {{/if}}
            {{#if success}}
                <div class="alert alert-success mb-3" role="alert">
                    {{success}}
                </div>
            {{/if}}
            <div class="mb-3 d-flex justify-content-center">
                <button class="btn btn-primary" type="submit">CHANGE PASSWORD</button>
            </div>
        </div>
    </form>
</div>
