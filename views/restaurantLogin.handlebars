<div class="container">
    <h1 class="text-center">Restaurant Login</h1>
    <form action="/login/restaurant" method="post">
        <div class="mb-3">
            <label for="id" class="form-label">Restaurant Id</label>
            <input type="text" id="id" name="id" placeholder="Restaurant Id" required class="form-control"
                   value="">
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" id="password" name="password" placeholder="Password" required class="form-control"
                   value="">
        </div>
        {{#if error}}
            <div class="alert alert-danger mb-3" role="alert">
                {{error}}
            </div>
        {{/if}}
        <div class="mb-3 d-flex justify-content-center">
            <button class="btn btn-primary" type="submit">LOGIN</button>
        </div>
    </form>
    <div class="mb-3 d-flex justify-content-center">
        <a href="/register/restaurantRegistration/" class="link-primary">register here</a>
    </div>
</div>

