<div class="container">

    <h1 class="mt-3 text-center">{{name}}</h1>
    <ul class="nav nav-pills mt-3 mb-3">
        {{#if menuReview}}
            <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/reviews/getRestaurantReviewOfUser">Restaurant</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/reviews/getMenuItemReviewOfUser">Menu</a>
            </li>
        {{else}}
            <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/reviews/getRestaurantReviewOfUser">Restaurant</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/reviews/getMenuItemReviewOfUser">Menu</a>
            </li>
        {{/if}}
    </ul>
    {{#if reviews}}
        <div class="row mt-4">
            {{#each reviews}}
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            {{this.title}}
                        </div>
                        <div class="card-body">
                            <p>{{this.review}}</p>
                            <a href="{{editUrl}}">Edit Review</a>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    {{else}}
        <div class="alert text-center alert-warning mb-3 mt-3">
            You not give any review
        </div>
    {{/if}}
</div>
