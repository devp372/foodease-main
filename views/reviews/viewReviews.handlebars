<div class="container">
    <h1 class="mt-3 text-center">{{name}}</h1>
    {{#if reviews}}
        <div class="row mt-4">
            {{#each reviews}}
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            {{this.title}}
                        </div>
                        <div class="card-body">
                            <p>{{this.review}}</p>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    {{else}}
        <div class="alert text-center alert-warning mb-3 mt-3">
            No reviews found
        </div>
    {{/if}}
</div>
