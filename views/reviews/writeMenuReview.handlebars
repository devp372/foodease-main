<div class="container">
    <h1 class="text-center mt-3">Menu Item Name : {{menuItem.name}}</h1>
    <form action="/reviews/writeMenuItemReview/{{menuId}}" method="post">
        <div class="mb-3">
            <label for="review" class="form-label">Write Review</label>
            <textarea id="review" name="review" placeholder="Write review here" class="form-control"></textarea>
        </div>
        {{#if error}}
            <div class="alert alert-danger mb-3" role="alert">
                {{error}}
            </div>
        {{/if}}
        <div class="mb-3 d-flex justify-content-center">
            <button class="btn btn-primary" type="submit">SUBMIT</button>
        </div>
    </form>
</div>
