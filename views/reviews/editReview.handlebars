<div class="container">
    <h1 class="text-center mt-3">Edit Review</h1>
    <form action="{{editReview}}" method="post" class="mt-3">
        <div class="mb-3">
            <label for="review" class="form-label">Write Review</label>
            <textarea id="review" name="review" required placeholder="Write review here"
                      class="form-control">{{review.review}}</textarea>
        </div>
        {{#if error}}
            <div class="alert alert-danger mb-3" role="alert">
                {{error}}
            </div>
        {{/if}}
        <div class="mb-3 d-flex justify-content-center">
            <button class="btn btn-primary" name="edit" value="EDIT" type="submit">SUBMIT</button>
        </div>
        <div class="mb-3 d-flex justify-content-center">
            <button class="btn btn-danger" name="edit" value="DELETE" type="submit">DELETE</button>
        </div>
    </form>
</div>
